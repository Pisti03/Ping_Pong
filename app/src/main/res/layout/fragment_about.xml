<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="szakdolgozat.istvan.ping_pong.AboutFragment">

    <ScrollView
        android:id="@+id/SCROLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/buttonsizebig"
        android:layout_marginTop="@dimen/labeltextsize"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/TV_ABOUT"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1.0"
            android:text="@string/about"
            android:textSize="@dimen/textsize" />
    </ScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/aboutlabel"
        android:textSize="@dimen/labeltextsize"
        android:textStyle="bold" />

</RelativeLayout>
