<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="szakdolgozat.istvan.ping_pong.SinglePlayerFragment">

    <TextView
        android:id="@+id/TV_SINGLEPLAYER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/singleplayer"
        android:textStyle="bold"
        android:textSize="@dimen/labeltextsize"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/buttonsizebig" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_SINGLEPLAYER"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/labeltextsize"
        android:text="Difficulty"
        android:textSize="@dimen/textsize" />

    <Spinner
        android:id="@+id/spinnerDifficulties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="@dimen/textsize"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/labeltextsize"
        android:text="First To Reach:"
        android:textSize="@dimen/textsize"
        android:layout_below="@+id/spinnerDifficulties"
        android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/numBestOf"
        android:layout_width="@dimen/buttonsizesmall"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/textsize"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal" />

</RelativeLayout>
