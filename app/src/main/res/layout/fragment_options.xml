<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="szakdolgozat.istvan.ping_pong.OptionsFragment">

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Options"
        android:textSize="36sp" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/textViewMenu"
        android:layout_alignStart="@+id/textViewMenu" />

    <TextView
        android:id="@+id/playerScore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Volume:"
        android:layout_alignBottom="@+id/seekBar3"
        android:layout_toLeftOf="@+id/seekBar3"
        android:layout_toStartOf="@+id/seekBar3" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="94dp"
        android:text="Sound:"
        android:layout_below="@+id/textViewMenu"
        android:layout_alignLeft="@+id/playerScore1"
        android:layout_alignStart="@+id/playerScore1" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Offline mode:"
        android:layout_below="@+id/seekBar3"
        android:layout_alignLeft="@+id/playerScore1"
        android:layout_alignStart="@+id/playerScore1" />

</RelativeLayout>
