<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="szakdolgozat.istvan.ping_pong.OptionsFragment">

    <TextView
        android:id="@+id/textViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Options"
        android:textSize="36sp" />

    <SeekBar
        android:id="@+id/SB_VOLUME"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/SWITH_SOUND"
        android:layout_alignLeft="@+id/textViewMenu"
        android:layout_alignStart="@+id/textViewMenu" />

    <TextView
        android:id="@+id/TV_VOLUME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Volume:"
        android:layout_alignBottom="@+id/SB_VOLUME"
        android:layout_toLeftOf="@+id/SB_VOLUME"
        android:layout_toStartOf="@+id/SB_VOLUME" />

    <Switch
        android:id="@+id/SWITH_SOUND"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="91dp"
        android:text="Sound:"
        android:layout_below="@+id/textViewMenu"
        android:layout_alignLeft="@+id/TV_VOLUME"
        android:layout_alignStart="@+id/TV_VOLUME" />

    <EditText
        android:id="@+id/ET_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_below="@+id/SB_VOLUME"
        android:layout_alignLeft="@+id/SB_VOLUME"
        android:layout_alignStart="@+id/SB_VOLUME" />

    <TextView
        android:id="@+id/TV_NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/ET_NAME"
        android:layout_alignBottom="@+id/ET_NAME"
        android:layout_toLeftOf="@+id/ET_NAME"
        android:layout_toStartOf="@+id/ET_NAME" />

    <TextView
        android:id="@+id/TV_FPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FPS: "
        android:textSize="18dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ET_NAME"
        android:layout_toStartOf="@+id/ET_NAME" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_alignTop="@+id/TV_FPS"
        android:layout_toRightOf="@+id/TV_FPS"
        android:layout_toEndOf="@+id/TV_FPS">

        <RadioButton
            android:id="@+id/RB_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="false"
            android:text="30 fps"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/RB_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="60 fps"
            android:textSize="18dp" />
    </RadioGroup>

</RelativeLayout>
